<da:DesktopAlertBase x:Class="Gemcom.Klabr.Controls.ImageAlert"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:da="clr-namespace:Gemcom.Klabr.Controls"
    Title="ImageAlert" Height="200">
    <Grid>        
        <Image Source="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=Url}"/>
    </Grid>
</da:DesktopAlertBase>
